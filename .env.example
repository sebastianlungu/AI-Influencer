# Safety Guards
ALLOW_LIVE=false
ENABLE_SCHEDULER=false
COORDINATOR_BATCH_SIZE=3
COORDINATOR_MAX_PARALLEL=3
MAX_COST_PER_RUN=5

# Video Defaults
GEN_DEFAULT_SECONDS=6
GEN_DEFAULT_FPS=30

# Veo 3 (Video Generation)
VIDEO_PROVIDER=veo
GCP_PROJECT_ID=your-gcp-project-id
GCP_LOCATION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
VEO_MODEL_ID=veo-3.0-generate-001
VEO_ASPECT=9:16
VEO_DURATION_SECONDS=6
VEO_NUM_RESULTS=1

# Grok (xAI - Image Briefs, Motion, Music, Social Meta)
GROK_API_KEY=
GROK_MODEL=grok-4-fast-reasoning
GROK_TIMEOUT_S=30

# Suno (Music Generation)
SUNO_API_KEY=
SUNO_MODEL=chirp-v3
SUNO_CLIP_SECONDS=6
SUNO_STYLE_HINTS_DEFAULT=ambient cinematic fitness

# Leonardo (Image Generation) - LOCKED TO VISION XL + EVA JOY LORA
LEONARDO_API_KEY=
# REQUIRED: Leonardo Vision XL model ID (fail-loud if missing)
# Get from https://docs.leonardo.ai/reference/models
LEONARDO_MODEL_ID=
# Eva Joy LoRA Element (LOCKED)
LEONARDO_LORA_ID=155265
LEONARDO_LORA_WEIGHT=0.80
# Native 9:16 Input Resolution (Alchemy will upscale 1.75x: 864x1536 â†’ 1512x2688)
LEONARDO_WIDTH=864
LEONARDO_HEIGHT=1536
# Alchemy V2 (REQUIRED for Vision XL + custom Elements to work correctly)
LEONARDO_USE_ALCHEMY=true
LEONARDO_PRESET_STYLE=DYNAMIC
# Generation Quality (legacy - only used if LEONARDO_USE_LEGACY_PARAMS=true)
LEONARDO_CFG=7.0
LEONARDO_STEPS=32
LEONARDO_USE_LEGACY_PARAMS=false
# Guards (fail-loud if LoRA not applied or model incompatible)
LEONARDO_REQUIRE_COMPATIBLE_BASE=true
LEONARDO_FORBID_FALLBACKS=true
# Legacy (deprecated - use LEONARDO_LORA_ID)
LEONARDO_ELEMENT_ID=155265
LEONARDO_ELEMENT_TRIGGER=evajoy
LEONARDO_ELEMENT_WEIGHT=0.80

# Local AV Tools
FFMPEG_PATH=ffmpeg
FFPROBE_PATH=ffprobe

